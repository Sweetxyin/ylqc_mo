.container {
  background-color: #f0ffff;
}
.swiper-item {
  height: 330rpx;
}
.swiper-item image {
  width: 100%;
  height: 100%;
}
.menuTab {
  display: flex;
}
.menu {
  display: flex;
  align-items: center;
  align-content: center;
}
.menu .menu_item {
  margin: -48rpx 0rpx 0 150rpx;
  z-index: 1;
}
.menu_item text {
  border: 1rpx solid #efefef;
  border-radius: 3rpx;
}
.menu_item text :hover {
  color: navajowhite;
  background-color: white;
}
.other_services {
  width: 93.5%;
  display: flex;
  flex-wrap: wrap;
  border: 1rpx solid #efefef;
  background-color: white;
  margin-left: 3%;
  margin-top: 10rpx;
  border-radius: 20rpx;
}
.services_list {
  width: 25%;
}
.services_item {
  height: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.services_item image {
  width: 60rpx;
  height: 60rpx;
}
.services_item text {
  font-size: 26rpx;
  margin-top: 10rpx;
}